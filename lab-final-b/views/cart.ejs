<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cart - BeBaker</title>
  <link rel="stylesheet" href="/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <header>
    <nav class="container">
      <h1 class="logo">BeBaker</h1>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/order/my-orders">My Orders</a></li>
      </ul>
    </nav>
  </header>

  <main class="container my-5">
    <h1>Your Cart</h1>
    <% if (cart.length === 0) { %>
      <div class="alert alert-info">Your cart is empty.</div>
    <% } else { %>
      <ul class="list-group mb-3">
        <% cart.forEach(item => { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= item.name %>
            <span>Quantity: <%= item.quantity %> | Price: <%= item.price %> | Total: <%= (item.price * item.quantity).toFixed(2) %></span>
          </li>
        <% }) %>
      </ul>
      <p><strong>Total: <%= total.toFixed(2) %></strong></p>
      <a href="/order/preview" class="btn btn-primary">Proceed to Checkout</a>
    <% } %>
    <a href="/" class="btn btn-secondary">Continue Shopping</a>
  </main>
</body>
</html>