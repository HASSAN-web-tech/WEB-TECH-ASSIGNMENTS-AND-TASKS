<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Orders - BeBaker</title>
  <link rel="stylesheet" href="/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <header>
    <nav class="container">
      <h1 class="logo">BeBaker</h1>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
      </ul>
    </nav>
  </header>

  <main class="container my-5">
    <h1>Your Orders for <%= email %></h1>
    <% if (orders.length === 0) { %>
      <div class="alert alert-info">No orders found.</div>
    <% } else { %>
      <ul class="list-group">
        <% orders.forEach(order => { %>
          <li class="list-group-item">
            <strong>Order ID:</strong> <%= order._id %><br>
            <strong>Date:</strong> <%= new Date(order.createdAt).toLocaleDateString() %><br>
            <strong>Total:</strong> <%= (order.discountedTotal || order.total).toFixed(2) %><br>
            <strong>Status:</strong> <%= order.status %>
          </li>
        <% }) %>
      </ul>
    <% } %>
    <a href="/order/my-orders" class="btn btn-secondary mt-3">Back</a>
  </main>
</body>
</html>