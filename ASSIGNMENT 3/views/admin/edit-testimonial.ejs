<%- include('admin/partials/admin_header') %>

  <h2>Edit Testimonial</h2>
  <form class="admin-form" action="/admin/testimonials/<%= testimonial._id %>/edit" method="post">
    <label>Author: <input name="author" value="<%= testimonial.author %>" required></label>
    <label>Text: <textarea name="text" required><%= testimonial.text %></textarea></label>
    <label>Rating: <input name="rating" type="number" min="1" max="5" value="<%= testimonial.rating %>"></label>
    <button class="btn" type="submit">Save</button>
  </form>

<%- include('admin/partials/admin_footer') %>
