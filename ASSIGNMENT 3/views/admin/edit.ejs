<%- include('admin/partials/admin_header') %>

  <h2>Edit Product</h2>
  <form class="admin-form" action="/admin/products/<%= product._id %>/edit" method="post">
    <label>Name: <input name="name" value="<%= product.name %>" required></label>
    <label>Price: <input name="price" type="number" step="0.01" value="<%= product.price %>" required></label>
    <label>Category: <input name="category" value="<%= product.category %>"></label>
    <label>Image URL: <input name="image" value="<%= product.image %>"></label>
    <label>Description:<br><textarea name="description"><%= product.description %></textarea></label>
    <button class="btn" type="submit">Save</button>
  </form>

<%- include('admin/partials/admin_footer') %>
