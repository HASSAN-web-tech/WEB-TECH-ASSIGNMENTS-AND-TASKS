<%- include('admin/partials/admin_header') %>

  <h2>Orders</h2>
  <table class="admin-table">
    <thead><tr><th>Customer</th><th>Total</th><th>Status</th><th>Created</th><th>Actions</th></tr></thead>
    <tbody>
      <% orders.forEach(function(o){ %>
        <tr>
          <td><%= o.customerName || 'Guest' %></td>
          <td>$<%= o.total %></td>
          <td><%= o.status %></td>
          <td><%= o.createdAt.toISOString().slice(0,10) %></td>
          <td>
            <a class="btn small" href="/admin/orders/<%= o._id %>">View</a>
            <form action="/admin/orders/<%= o._id %>/delete" method="post" style="display:inline">
              <button class="btn danger small" type="submit" onclick="return confirm('Delete?')">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

<%- include('admin/partials/admin_footer') %>
